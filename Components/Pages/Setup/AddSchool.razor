        --input-bg-focus: #FFFFFF;
        --text-main: #000000;
        --text-secondary: #666666;
        --text-label: #333333;
        --text-placeholder: #AAAAAA;
        --radius-input: 12px;
        --radius-pill: 16px;
        --page-width: 375px;
    }

    .add-school-container {
